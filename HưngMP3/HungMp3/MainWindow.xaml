<Window x:Class="HungMp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HungMp3"
        xmlns:uc="clr-namespace:HungMp3"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="HungMP3" Height="800px" Width="1024px">
    <Window.Resources>
        <ResourceDictionary Source="TextStyle.xaml"></ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid x:Name="playList">
            <Grid.RowDefinitions>
                <RowDefinition Height="200px"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <!--ListBar-->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Background="MistyRose">
                    <Image Source="D:\20201\Project I\ProjectI20201\HưngMP3\HungMp3\Resources\nhacvn.jpg" Stretch="UniformToFill"/>
                    <ToggleButton Height="30" Margin="0,0,0.4,170" IsChecked="{Binding IsListVN}">
                        <ToggleButton.Background>
                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                <GradientStop Color="white" Offset="1"/>
                                <GradientStop Color="orange"/>
                            </LinearGradientBrush>
                        </ToggleButton.Background>
                        BXH Việt Nam
                    </ToggleButton>
                </Grid>
                <Grid Grid.Column="1" Background="WhiteSmoke">
                    <Image Source="D:\20201\Project I\ProjectI20201\HưngMP3\HungMp3\Resources\nhacusuk.jpg" Stretch="Fill"></Image>
                    <ToggleButton Height="30" Margin="0,0,0.4,170" IsChecked="{Binding IsListUS}">
                        <ToggleButton.Background>
                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                <GradientStop Color="red" Offset="1"/>
                                <GradientStop Color="white"/>
                            </LinearGradientBrush>
                        </ToggleButton.Background>
                        BXH Âu Mỹ 
                    </ToggleButton>
                </Grid>
                <Grid Grid.Column="2" Background="Azure">
                    <Image Source="D:\20201\Project I\ProjectI20201\HưngMP3\HungMp3\Resources\nhacyeuthich.jpg"></Image>
                    <ToggleButton Height="30" Margin="0,0,0.4,170" IsChecked="{Binding IsListYeuThich}">
                        <ToggleButton.Background>
                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                <GradientStop Color="pink" Offset="1"/>
                                <GradientStop Color="Yellow"/>
                            </LinearGradientBrush>
                        </ToggleButton.Background>
                        Nhạc yêu thích
                    </ToggleButton>
                </Grid>
                <Grid Grid.Column="3" Background="Pink">
                    <Image Source="D:\20201\Project I\ProjectI20201\HưngMP3\HungMp3\Resources\Love.png" Stretch="UniformToFill"></Image>
                    <ToggleButton Height="30" Margin="0,0,0.4,170" IsChecked="{Binding IsListNgheNhieu}">
                        <ToggleButton.Background>
                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                <GradientStop Color="MediumVioletRed" Offset="1"/>
                                <GradientStop Color="pink"/>
                            </LinearGradientBrush>
                        </ToggleButton.Background>
                        Nhạc nghe nhiều nhất
                    </ToggleButton>
                </Grid>
            </Grid>
            <!--List cụ thể-->
            <Grid Grid.Row="1">
                <ListBox x:Name="listMenu" HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Height="50" BorderThickness="1" BorderBrush="Black">
                                <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="50"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <Grid Background="AliceBlue">
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding STT}"></TextBlock>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <Grid Background="Beige">
                                            <TextBlock HorizontalAlignment="Left" Text="{Binding SongName}"></TextBlock>
                                        </Grid>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <Button Click="Button_Click">Like</Button>
                                    </Grid>
                                
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
        <uc:InterfaceApp PreviousClick="songControl_PreviousClick" NextClick="songControl_NextClick"
                         x:Name="songControl" Visibility="Hidden"></uc:InterfaceApp>
    </Grid>
</Window>
